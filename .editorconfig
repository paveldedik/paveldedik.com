# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_white_space_on_save = true

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Tab indentation
[*.js]
indent_style = tab
indent_size = 4

# 2 space indentation
[*.html]
indent_style = space
indent_size = 2
